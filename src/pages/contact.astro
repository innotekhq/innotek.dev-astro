---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ContactUs from '~/components/widgets/Contact.astro';

const metadata = {
  title: 'Contact',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText tagline="Contact" title="Let's Connect!" />

  <ContactUs
    title="Drop us a message today!"
    subtitle="Tell us about your project idea using the form below and weâ€™ll get back to you!"
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'Name',
        required: true
      },
      {
        type: 'email',
        name: 'email',
        label: 'Email',
        required: true
      },
    ]}
    textarea={{
      label: 'Message',
      name: 'message',
      required: true
    }}
    disclaimer={{
      label:
        'By submitting this contact form, you acknowledge and agree to the collection of the information you entered in the above form.',
      required: true
    }}
    description="Our support team typically responds within 24 business hours."
  />
</Layout>
